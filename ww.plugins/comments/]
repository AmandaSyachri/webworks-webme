$plugin
	= array(
		'name'=>'Comments',
		'description' =>'Allow visitors to comment on pages on your site',
		'version'=>2,
		'admin'=>array(
			'menu'=>array(
				'Communication>Comments'=>'comments'
			),
			'page_panel'=>array(
				'name'=>'Comments', 
				'function'=>'comments_show_tab'
			)
		),
			);

function comments_show_tab ($page, $pagevars) {
	require_once SCRIPTBASE.'ww.plugins/comments/comments-tab.php';
	return comments_display_tab_contents();
}
